<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tan_background"
        android:orientation="vertical"
        tools:context="com.example.rmanzini.mymusicplayer.ArtistsActivity">
    <TextView
        style="@style/ContentStyle"
        android:text="@string/content_artists"
        />

        <include
            android:id="@+id/included_albums"
            layout="@layout/button_albums" />
        <include
            android:id="@+id/included_playlist"
            layout="@layout/button_playlist" />
        <include
            android:id="@+id/included_discover"
            layout="@layout/button_discover" />
        <include
            android:id="@+id/included_home"
            layout="@layout/button_home" />
</LinearLayout>
    </layout>
